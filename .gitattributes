# Auto detect text files and perform LF normalization
* text=auto

# TypeScript and JavaScript files
*.ts text eol=lf
*.js text eol=lf
*.json text eol=lf

# HTML and CSS files
*.html text eol=lf
*.css text eol=lf

# Markdown files
*.md text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.conf text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
*.vsix binary
*.dll binary
*.so binary
*.dylib binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore 